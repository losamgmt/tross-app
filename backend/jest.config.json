{
  "testEnvironment": "node",
  "testMatch": [
    "**/__tests__/unit/**/*.test.js",
    "**/__tests__/integration/**/*.test.js"
  ],
  "setupFilesAfterEnv": ["<rootDir>/__tests__/setup/jest.setup.js"],
  "maxWorkers": 1,
  "forceExit": true,
  "testTimeout": 30000,
  "collectCoverageFrom": [
    "**/*.js",
    "!**/node_modules/**",
    "!**/__tests__/**",
    "!**/coverage/**",
    "!jest.config.js",
    "!**/*-old.js",
    "!**/*-backup.js",
    "!**/auth0-setup.json"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 10,
      "functions": 8,
      "lines": 10,
      "statements": 10
    }
  },
  "coverageReporters": ["text", "lcov", "html"],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/__tests__/fixtures/",
    "/__tests__/helpers/",
    "/__tests__/TESTING_STRATEGY.js"
  ]
}
