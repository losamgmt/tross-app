{
  "testEnvironment": "node",
  "maxWorkers": 1,
  "bail": 1,
  "verbose": true,
  "projects": [
    {
      "displayName": "unit",
      "testMatch": ["**/__tests__/unit/**/*.test.js"],
      "setupFilesAfterEnv": ["<rootDir>/__tests__/setup/jest.setup.js"],
      "testTimeout": 5000,
      "maxWorkers": 1
    },
    {
      "displayName": "integration",
      "testMatch": ["**/__tests__/integration/**/*.test.js"],
      "setupFilesAfterEnv": ["<rootDir>/__tests__/setup/jest.integration.setup.js"],
      "globalSetup": "<rootDir>/__tests__/setup/jest.global.setup.js",
      "globalTeardown": "<rootDir>/__tests__/setup/jest.integration.teardown.js",
      "testTimeout": 10000,
      "maxWorkers": 1
    }
  ],
  "collectCoverageFrom": [
    "**/*.js",
    "!**/node_modules/**",
    "!**/__tests__/**",
    "!**/coverage/**",
    "!**/scripts/**",
    "!**/migrations/**",
    "!**/seeds/**",
    "!jest.config*.js",
    "!**/*-old.js",
    "!**/*-backup.js",
    "!**/auth0-setup.json",
    "!utils/env-validator.js",
    "!utils/name-utils.js",
    "!utils/permission-check.js",
    "!utils/validation-sync-checker.js",
    "!**/default-value-helper.js",
    "!**/delete-helper.js",
    "!server.js",
    "!db/connection.js",
    "!config/test-logger.js",
    "!config/swagger.js",
    "!services/auth/DevAuthStrategy.js",
    "!services/auth/AuthStrategy.js",
    "!middleware/rate-limit.js",
    "!utils/identifier-generator.js",
    "!config/auth0.js",
    "!middleware/dev-auth.js",
    "!config/timeouts.js",
    "!routes/files.js",
    "!services/auth/index.js",
    "!config/app-config.js",
    "!routes/auth0.js"
  ],
  "coverageReporters": ["text", "lcov", "html", "json-summary"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/__tests__/fixtures/",
    "/__tests__/helpers/",
    "/__tests__/setup/"
  ],
  "forceExit": true,
  "detectOpenHandles": true
}
