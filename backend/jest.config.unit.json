{
  "testEnvironment": "node",
  "displayName": "Unit Tests",
  "testMatch": ["**/__tests__/unit/**/*.test.js"],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/__tests__/fixtures/",
    "/__tests__/helpers/",
    "/__tests__/setup/"
  ],
  "setupFilesAfterEnv": ["<rootDir>/__tests__/setup/jest.setup.js"],
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "collectCoverageFrom": [
    "**/*.js",
    "!**/node_modules/**",
    "!**/__tests__/**",
    "!**/coverage/**",
    "!jest.config*.js",
    "!**/*-old.js",
    "!**/*-backup.js",
    "!**/auth0-setup.json"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "coverageReporters": ["text", "lcov", "html"],
  "testTimeout": 5000,
  "verbose": true
}
