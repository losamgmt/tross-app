{
  "testEnvironment": "node",
  "displayName": "Unit Tests",
  "testMatch": ["**/__tests__/unit/**/*.test.js"],
  "maxWorkers": 1,
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/__tests__/fixtures/",
    "/__tests__/helpers/",
    "/__tests__/setup/"
  ],
  "setupFilesAfterEnv": ["<rootDir>/__tests__/setup/jest.setup.js"],
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "collectCoverageFrom": [
    "config/**/*.js",
    "db/**/*.js",
    "middleware/**/*.js",
    "routes/**/*.js",
    "services/**/*.js",
    "utils/**/*.js",
    "validators/**/*.js",
    "!**/node_modules/**",
    "!**/__tests__/**",
    "!**/coverage/**",
    "!**/coverage-unit/**",
    "!**/coverage-integration/**",
    "!**/scripts/**",
    "!jest.config*.js",
    "!**/*-old.js",
    "!**/*-backup.js",
    "!**/auth0-setup.json",
    "!config/auth0.js",
    "!config/logger.js",
    "!config/swagger.js",
    "!db/models/user.js",
    "!routes/dev-auth.js",
    "!middleware/auth/dev-auth.js"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/coverage/",
    "/coverage-unit/",
    "/coverage-integration/",
    "/scripts/",
    "/__tests__/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 60,
      "functions": 60,
      "lines": 60,
      "statements": 60
    }
  },
  "coverageReporters": ["text", "lcov", "html"],
  "testTimeout": 5000,
  "verbose": true,
  "bail": false,
  "detectOpenHandles": false,
  "forceExit": true
}
