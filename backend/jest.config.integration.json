{
  "testEnvironment": "node",
  "displayName": "Integration Tests",
  "testMatch": ["**/__tests__/integration/**/*.test.js"],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/__tests__/fixtures/",
    "/__tests__/helpers/",
    "/__tests__/setup/"
  ],
  "setupFilesAfterEnv": ["<rootDir>/__tests__/setup/jest.integration.setup.js"],
  "globalSetup": "<rootDir>/__tests__/setup/jest.global.setup.js",
  "globalTeardown": "<rootDir>/__tests__/setup/jest.integration.teardown.js",
  "collectCoverageFrom": [
    "**/*.js",
    "!**/node_modules/**",
    "!**/__tests__/**",
    "!**/coverage/**",
    "!**/scripts/**",
    "!**/migrations/**",
    "!**/seeds/**",
    "!jest.config*.js",
    "!**/*-old.js",
    "!**/*-backup.js",
    "!**/auth0-setup.json",
    "!utils/env-validator.js",
    "!utils/name-utils.js",
    "!utils/permission-check.js",
    "!utils/validation-sync-checker.js",
    "!**/default-value-helper.js",
    "!**/delete-helper.js"
  ],
  "coverageReporters": ["text", "lcov", "html"],
  "testTimeout": 10000,
  "verbose": true,
  "maxWorkers": 1,
  "forceExit": true,
  "bail": 1,
  "detectOpenHandles": true
}
