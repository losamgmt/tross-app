# Production Environment Variables
# Copy to .env.prod and fill in secure values

# Database Configuration
DB_NAME=trossapp
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Application Security
JWT_SECRET=CHANGE_THIS_VERY_SECURE_JWT_SECRET_KEY
NODE_ENV=production

# Auth0 Configuration (if using)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your_production_client_id
AUTH0_CLIENT_SECRET=your_production_client_secret
AUTH0_AUDIENCE=https://api.trossapp.com
AUTH0_CALLBACK_URL=https://yourdomain.com/api/auth0/callback

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Logging
LOG_LEVEL=warn